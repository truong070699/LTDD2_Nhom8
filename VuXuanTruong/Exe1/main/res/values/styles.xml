<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Title">
        <item name="android:textColor">#9C27B0</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/title</item>
    </style>
    <style name="Data">
        <item name="android:background">@drawable/pheptinh</item>
        <item name="android:textColor">#120314</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/btntinh</item>
        <item name="android:textColor">#2125F3</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="img">
        <item name="android:background">@drawable/doihinh</item>
    </style>

</resources>
